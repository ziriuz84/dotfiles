# fi

# Compilation flags
# export ARCHFLAGS="-arch x86_64"

# Set personal aliases, overriding those provided by Oh My Zsh libs,
# plugins, and themes. Aliases can be placed here, though Oh My Zsh
# users are encouraged to define aliases within a top-level file in
# the $ZSH_CUSTOM folder, with .zsh extension. Examples:
# - $ZSH_CUSTOM/aliases.zsh
# - $ZSH_CUSTOM/macos.zsh
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"
export EDITOR='nvim'
# Install Ruby Gems to ~/gems
export GEM_HOME="$HOME/gems"
alias sshk="kitty +kitten ssh"
alias icat="kitty +kitten icat"
alias d="kitty +kitten diff"
alias lexa="eza -l -a -h --git"
alias texa="eza -T"
alias python='python3'
alias nvimtest='NVIM_APPNAME=nvim-test nvim'
path+=('/home/sirio/.local/bin')
path+=('/home/sirio/.cargo/bin')
path+=('/home/sirio/bin')
path+=('/home/sirio/gems/bin')
path+=('/home/sirio/.config/composer/vendor/bin')
path+=('/usr/local/go/bin')
path+=('/home/sirio/.local/share/nvim/mason/bin')
path+=('/opt/nvim')
export GEM_HOME="$(ruby -e 'puts Gem.user_dir')"
export PATH="$PATH:$GEM_HOME/bin"
export ANDROID_HOME=$HOME/Android/Sdk
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/tools
export PATH=$PATH:$ANDROID_HOME/tools/bin
export PATH=$PATH:$ANDROID_HOME/platform-tools
export PATH="$PATH:$(go env GOBIN):$(go env GOPATH)/bin"
export PATH
eval "$(starship init zsh)"
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# tabtab source for packages
# uninstall by removing these lines
[[ -f ~/.config/tabtab/__tabtab.zsh ]] && . ~/.config/tabtab/__tabtab.zsh || true

# PKG_CONFIG_PATH export to solve problems between tauri.app and homebrew
export PKG_CONFIG_PATH=/usr/lib/pkgconfig:/usr/share/pkgconfig:/usr/lib/x86_64-linux-gnu/pkgconfig

autoload -Uz compinit
compinit

export ZK_NOTEBOOK_DIR=/home/sirio/Nextcloud/zettelkasten/

eval "$(zoxide init zsh)"


# bun completions
[ -s "/home/sirio/.bun/_bun" ] && source "/home/sirio/.bun/_bun"

# bun
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"

export GPG_TTY=$(tty)
